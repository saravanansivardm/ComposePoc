<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pocofdigivalapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <application
        android:name=".application.CourseListApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light">

        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose" />

        <activity
            android:name=".PermissionAct"
            android:exported="false" />
        <activity
            android:name=".dashboard.NavigationDrawerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose" />
        <activity
            android:name=".forgotpassword.ForgotPasswordAct"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".profile.basicdetails.ProfileScreenAct" />

        <activity
            android:name=".staffverification.StaffVerificationStatusAct"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StaffVerificationAct"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".DatePicker"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".CameraAct"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".TextfieldAct"
            android:exported="false" />
        <activity
            android:name=".studentmycourses.StudentMyCourseListActivity"
            android:exported="true" />
        <activity
            android:name=".camera.CameraActivity"
            android:exported="true" />

        <activity
            android:name=".unitconvertor.UnitConvertorAct"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.pocofdigivalapp.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>