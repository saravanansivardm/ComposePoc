<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocofdigivalapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:name=".application.CourseListApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".PermissionAct"
            android:exported="false" />
        <activity
            android:name=".dashboard.NavigationDrawerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose" />
        <activity
            android:name=".forgotpassword.ForgotPasswordAct"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.NavigationDrawerCompose" />
        <activity
            android:name=".profile.ProfileScreenAct"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StaffVerificationAct"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NavigationDrawerCompose" />
        <activity
            android:name=".DatePicker"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TextfieldAct"
            android:exported="false" />
        <activity
            android:name=".studentmycourses.StudentMyCourseListActivity"
            android:exported="true" />
    </application>

</manifest>